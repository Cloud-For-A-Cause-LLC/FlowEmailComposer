<design:component label="Flow Email Composer">
    <design:attribute name="whatId" Label="WhatId" Description="Specify Id if the object is Non-human object"/>
    <design:attribute name="whoId" Label="WhoId" Description="Specify Id if the object is human object such as Contact or Lead or User"/>
    <design:attribute name="senderName" Label="Sender Display Name" Description="The name that appears on the From line of the email"/>
    <design:attribute name="toAddresses" Label="Comma separated To Addresses" description="Specify comma separated email Addresses"/>
    <design:attribute name="ccAddresses" Label="Comma separated CC Addresses" description="Specify comma separated email Addresses"/>
    <design:attribute name="bccAddresses" Label="Comma separated BCC Addresses" description="Specify comma separated email Addresses"/>
    <design:attribute name="subject" Label="Subject"/>
    <design:attribute name="emailTemplateId" Label="Specify 18 digit Email Template Id"/>
</design:component>